# Application Settings
APP_NAME=Agentic RAG with Database Routing
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=threat_intelligence
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/threat_intelligence

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=threat_documents

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AI/LLM Configuration (Free Open Source)
LLM_PROVIDER=groq
LLM_MODEL=mixtral-8x7b-32768
GROQ_API_KEY=your_free_groq_api_key_here
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_TOKENS=2000
TEMPERATURE=0.1

# Alternative: Ollama (local)
# LLM_PROVIDER=ollama
# LLM_MODEL=codellama:34b-instruct
# OLLAMA_BASE_URL=http://localhost:11434

# Alternative: Hugging Face (free tier with rate limits)
# LLM_PROVIDER=huggingface
# HF_MODEL=microsoft/DialoGPT-medium
# HF_API_TOKEN=your_hf_token_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001

# Data Sources
MITRE_ATTACK_URL=https://raw.githubusercontent.com/mitre/cti/master/enterprise-attack/enterprise-attack.json
CVE_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
MAX_CVE_REQUESTS_PER_MINUTE=5

# Performance
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
QUERY_TIMEOUT=30
CACHE_TTL=3600